{
    "compilerOptions": {
        "module":"commonjs",
        "outDir": "../../built/story",
        "allowJs": false,
        "target": "es6",
        "sourceMap": true,
        "noResolve":true,
        "removeComments": true,
        "declaration": true,
        // types option has been previously configured
        "types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "../../../node_modules/@types"
         ]
    },
    "include": [
        "./*"
    ]
}